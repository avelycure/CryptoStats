<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoStats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSurface">@color/light_white</item>
        <item name="colorOnSurface">@color/dark_green</item>

        <item name="strokeColor">@color/dark_green</item>

        <item name="titleTextColor">@color/green_light</item>
        <item name="textFillColor">@color/dark_green</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/peach</item>
        <item name="colorOnPrimary">@color/dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_red</item>
        <item name="colorSecondaryVariant">@color/light_red_variant</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>