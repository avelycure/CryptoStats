<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/candle_stick_chart">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn24h"
        style="@style/ButtonCryptoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24h"
        android:textColor="?attr/titleTextColor"
        android:textSize="10sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn6h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="?attr/strokeColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6h"
        style="@style/ButtonCryptoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="?attr/titleTextColor"
        android:textSize="10sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn15m"
        app:layout_constraintStart_toEndOf="@+id/btn24h"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="?attr/strokeColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn15m"
        style="@style/ButtonCryptoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15m"
        android:textColor="?attr/titleTextColor"
        android:textSize="10sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn6h"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#33AAAAAA" />
</androidx.constraintlayout.widget.ConstraintLayout>