<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CryptoStats">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.CryptoStats">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/ci_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:titleTextColor="?attr/titleTextColor" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ci_tv_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="Bitcoin"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ci_tv_coin_value_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="USD"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />

            <include layout="@layout/stat24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Price"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@+id/container_stat24" />

            <include layout="@layout/price24"/>

            <include layout="@layout/price"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Changes"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@+id/current_price_stats" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:layout_constraintTop_toBottomOf="@+id/changes" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/candles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Candles"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <com.github.mikephil.charting.charts.CandleStickChart
                android:id="@+id/candle_stick_chart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:layout_constraintTop_toBottomOf="@+id/candles" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/candle_stick_chart">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn24h"
                    style="@style/ButtonCryptoChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24h"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="10sp"
                    app:cornerRadius="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn6h"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="#33AAAAAA"
                    app:strokeColor="?attr/strokeColor" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn6h"
                    style="@style/ButtonCryptoChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="10sp"
                    app:cornerRadius="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn15m"
                    app:layout_constraintStart_toEndOf="@+id/btn24h"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="#33AAAAAA"
                    app:strokeColor="?attr/strokeColor" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn15m"
                    style="@style/ButtonCryptoChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15m"
                    android:textColor="?attr/titleTextColor"
                    android:textSize="10sp"
                    app:cornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn6h"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="#33AAAAAA" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/trades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Trades"
                android:textColor="?attr/titleTextColor"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@+id/btn_container" />

            <include layout="@layout/trades"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>